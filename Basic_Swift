//21. ĞĞ°Ğ¿Ğ¸ÑˆĞ¸Ñ‚Ğµ Ñ„ÑƒĞ½ĞºÑ†Ğ¸Ñ, ĞºĞ¾Ñ‚Ğ¾Ñ€Ğ°Ñ Ğ±ÑƒĞ´ĞµÑ‚ Ğ¿Ñ€Ğ¸Ğ½Ğ¸Ğ¼Ğ°Ñ‚ÑŒ ÑÑ‚Ñ€Ğ¾ĞºÑƒ Ğ¸ Ğ²Ğ¾Ğ·Ğ²Ñ€Ğ°Ñ‰Ğ°Ñ‚ÑŒ true, ĞµÑĞ»Ğ¸ Ğ¾Ğ½Ğ° ĞµÑÑ‚ÑŒ Ğ² Ğ»ÑĞ±Ğ¾Ğ¼ Ğ¸Ğ· Ğ´Ğ²ÑƒÑ… Ğ¼Ğ°ÑÑĞ¸Ğ²Ğ¾Ğµ, Ğ»Ğ¸Ğ±Ğ¾ false Ğ² Ğ¿Ñ€Ğ¾Ñ‚Ğ¸Ğ²Ğ½Ğ¾Ğ¼ ÑĞ»ÑƒÑ‡Ğ°Ğµ

let animals1 = ["dog", "cat", "bird", "pig"]
let animals2 = ["turtle", "snake", "lizard", "shark"]

func returnMyString(_ str: String) -> Bool {
    return animals1.contains(str) || animals2.contains(str) ? true : false
}
//22. ĞĞ°Ğ¿Ğ¸ÑˆĞ¸Ñ‚Ğµ Ñ„ÑƒĞ½ĞºÑ†Ğ¸Ñ, ĞºĞ¾Ñ‚Ğ¾Ñ€Ğ°Ñ ÑÑ‡Ğ¸Ñ‚Ğ°ĞµÑ‚ Ñ„Ğ°ĞºÑ‚Ğ¾Ñ€Ğ¸Ğ°Ğ»

func factorial(_ number: Int) -> Int {
    return number == 0 ? 1 : factorial(number - 1) * number
}
factorial(6)
//23. ĞĞ°Ğ¿Ğ¸ÑˆĞ¸Ñ‚Ğµ Ñ„ÑƒĞ½ĞºÑ†Ğ¸Ñ, ĞºĞ¾Ñ‚Ğ¾Ñ€Ğ°Ñ Ğ±ÑƒĞ´ĞµÑ‚ ÑÑ‡Ğ¸Ñ‚Ğ°Ñ‚ÑŒ ÑĞºĞ¾Ğ»ÑŒĞºĞ¾ Ñ€Ğ°Ğ· Ğ² Ğ¼Ğ°ÑÑĞ¸Ğ²Ğµ Ğ²ÑÑ‚Ñ€ĞµÑ‡Ğ°ĞµÑ‚ÑÑ Ñ†Ğ¸Ñ„Ñ€Ğ° 2
func arrayTwoCount(_ array: [Int]) -> Int {
    return array.filter { $0 == 2}.count
}
arrayTwoCount([1, 2, 2, 3, 4, 2, 2, 2])
//24. ĞĞ°Ğ¿Ğ¸ÑˆĞ¸Ñ‚Ğµ Ñ„ÑƒĞ½ĞºÑ†Ğ¸Ñ, ĞºĞ¾Ñ‚Ğ¾Ñ€Ğ°Ñ Ğ±ÑƒĞ´ĞµÑ‚ Ğ¿Ñ€Ğ¾Ğ²ĞµÑ€ÑÑ‚ÑŒ ĞµÑÑ‚ÑŒ Ğ»Ğ¸ ÑÑ€ĞµĞ´Ğ¸ Ğ¿ĞµÑ€Ğ²Ñ‹Ñ… 3 ÑĞ»ĞµĞ¼ĞµĞ½Ñ‚Ğ¾Ğ² Ğ¼Ğ°ÑÑĞ¸Ğ²Ğ° Ñ†Ğ¸Ñ„Ñ€Ğ° 2
func threeBool(_ array: [Int]) -> Bool {
    return array[0...2].contains(2)
}
threeBool([1, 4, 3, 4, 5])
